<!-- Form item start -->
<form action="/create_item_from_restaurant" method="post">
<!-- Form item end -->

  <!-- Label and input for restaurant_id start -->
  <!-- Input for restaurant_id start -->
  <input type="hidden" name="restaurant_id" value="<%= @restaurant.id %>">
  <!-- Input for restaurant_id end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control" value="<%= @item.name %>">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <!-- Label and input for vegetarian start -->
  <div class="form-group">
    <label for="vegetarian">
      Vegetarian
    </label>
    <!-- Input for vegetarian start -->
    <input id="vegetarian" class="form-check-input" name="vegetarian" type="checkbox" <%= "checked" if @item.vegetarian %>>
    <!-- Input for vegetarian end -->
  </div>

  <!-- Label and input for vegan start -->
  <div class="form-group">
    <label for="vegan">
      Vegan
    </label>
    <!-- Input for vegan start -->
    <input id="vegan" class="form-check-input" name="vegan" type="checkbox" <%= "checked" if @item.vegan %>>
    <!-- Input for vegan end -->
  </div>

  <!-- Label and input for description start -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <!-- Input for description start -->
    <input type="text" id="description" name="description" class="form-control" value="<%= @item.description %>">
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <button class="btn btn-block btn-outline-secondary">
    Create item
  </button>
</form>

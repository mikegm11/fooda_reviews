<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All reviews
    </h1>

    <a href="/reviews/new" class="btn btn-block btn-outline-secondary">
      Add a new review
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Item
        </th>

        <th>
          User
        </th>

        <th>
          Picture
        </th>

        <th>
          Review
        </th>

        <th>
          Rating
        </th>

        <th>
          Orderagain
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @reviews.each do |review| %>
      <tr>
        <!-- Display review.id start -->
        <td>
          <%= review.id %>
        </td>
        <!-- Display review.id end -->

        <!-- Display review.item_id start -->
        <td>
          <%= review.item_id %>
        </td>
        <!-- Display review.item_id end -->

        <!-- Display review.user_id start -->
        <td>
          <%= review.user_id %>
        </td>
        <!-- Display review.user_id end -->

        <!-- Display review.picture start -->
        <td>
          <%= review.picture %>
        </td>
        <!-- Display review.picture end -->

        <!-- Display review.review start -->
        <td>
          <%= review.review %>
        </td>
        <!-- Display review.review end -->

        <!-- Display review.rating start -->
        <td>
          <%= review.rating %>
        </td>
        <!-- Display review.rating end -->

        <!-- Display review.orderagain start -->
        <td>
          <%= review.orderagain %>
        </td>
        <!-- Display review.orderagain end -->

        <!-- Display review.name start -->
        <td>
          <%= review.name %>
        </td>
        <!-- Display review.name end -->

        <!-- Display review.created_at start -->
        <td>
          <%= time_ago_in_words(review.created_at) %> ago
        </td>
        <!-- Display review.created_at end -->

        <!-- Display review.updated_at start -->
        <td>
          <%= time_ago_in_words(review.updated_at) %> ago
        </td>
        <!-- Display review.updated_at end -->

        <td>
          <a href="/reviews/<%= review.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

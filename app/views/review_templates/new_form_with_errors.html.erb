<% if @review.present? %>
  <% if @review.errors.any? %>
    <% @review.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new review
</h1>


<hr>

<form action="/create_review" method="post" enctype="multipart/form-data">

  <div class="form-group">
    <label for="item_id">
      Item
    </label>

    <%= select_tag(:item_id, options_from_collection_for_select(Item.all, :id, :restaurant_id, @review.item_id), :class => "form-control") %>
  </div>

  <input type="hidden" name="user_id" value="<%= current_user.id %>">

  <div class="form-group">
    <label for="picture">
      Picture
    </label>

    <input type="file" id="picture" name="picture" class="form-control">
  </div>

  <div class="form-group">
    <label for="review">
      Review
    </label>

    <input type="text" id="review" name="review" class="form-control" value="<%= @review.review %>">
  </div>

  <div class="form-group">
    <label for="rating">
      Rating
    </label>

    <input type="text" id="rating" name="rating" class="form-control" value="<%= @review.rating %>">
  </div>

  <div class="form-check">
    <input type="hidden" value="0" name="orderagain">
    <input id="orderagain" class="form-check-input" name="orderagain" type="checkbox" <%= "checked" if @review.orderagain %>>
    <label for="orderagain" class="form-check-label">
      Orderagain
    </label>
  </div>

  <div class="form-group">
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" class="form-control" value="<%= @review.name %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create review
  </button>
</form>

<hr>

<a href="/reviews">
  Go back
</a>

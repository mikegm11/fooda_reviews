<h1>
  Edit review #<%= @review.id %>
</h1>

<hr>

<form action="/update_review/<%= @review.id %>" method="post" enctype="multipart/form-data">

  <div class="form-group">
    <label for="item_id">
      Item
    </label>

    <%= select_tag(:item_id, options_from_collection_for_select(Item.all, :id, :restaurant_id, @review.item_id), :class => "form-control") %>
  </div>


  <div class="form-group">
    <label for="picture">
      Picture
    </label>

    <%= cl_image_tag(@review.picture.to_s, :width => 90, :height => 90, :crop => :thumb) %>
    <input type="file" id="picture" name="picture" class="form-control">
  </div>

  <div class="form-group">
    <label for="review">
      Review
    </label>

    <input type="text" id="review" name="review" class="form-control" value="<%= @review.review %>">
  </div>

  <div class="form-group">
    <label for="rating">
      Rating
    </label>

    <input type="text" id="rating" name="rating" class="form-control" value="<%= @review.rating %>">
  </div>

  <div class="form-check">
    <input type="hidden" value="0" name="orderagain">
    <input id="orderagain" class="form-check-input" name="orderagain" type="checkbox" value="1" <%= "checked" if @review.orderagain %>>
    <label for="orderagain" class="form-check-label">
      Orderagain
    </label>
  </div>

  <div class="form-group">
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" class="form-control" value="<%= @review.name %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update review
  </button>
</form>

<hr>

<a href="/reviews">
  Go back
</a>

<% if @item.present? %>
  <% if @item.errors.any? %>
    <% @item.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new item
</h1>


<hr>

<form action="/create_item" method="post">

  <div class="form-group">
    <label for="restaurant_id">
      Restaurant
    </label>

    <%= select_tag(:restaurant_id, options_from_collection_for_select(Restaurant.all, :id, :cuisine, @item.restaurant_id), :class => "form-control") %>
  </div>

  <div class="form-group">
    <label for="name">
      Name
    </label>

    <input type="text" id="name" name="name" class="form-control" value="<%= @item.name %>">
  </div>

  <div class="form-check">
    <input type="hidden" value="0" name="vegetarian">
    <input id="vegetarian" class="form-check-input" name="vegetarian" type="checkbox" <%= "checked" if @item.vegetarian %>>
    <label for="vegetarian" class="form-check-label">
      Vegetarian
    </label>
  </div>

  <div class="form-check">
    <input type="hidden" value="0" name="vegan">
    <input id="vegan" class="form-check-input" name="vegan" type="checkbox" <%= "checked" if @item.vegan %>>
    <label for="vegan" class="form-check-label">
      Vegan
    </label>
  </div>

  <div class="form-group">
    <label for="description">
      Description
    </label>

    <input type="text" id="description" name="description" class="form-control" value="<%= @item.description %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create item
  </button>
</form>

<hr>

<a href="/items">
  Go back
</a>

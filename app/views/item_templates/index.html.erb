<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All items
    </h1>

    <a href="/items/new" class="btn btn-block btn-outline-secondary">
      Add a new item
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "item_templates/items_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Restaurant
        </th>

        <th>
          Name
        </th>

        <th>
          Vegetarian
        </th>

        <th>
          Vegan
        </th>

        <th>
          Description
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @items.each do |item| %>
      <tr>
        <td>
          <%= item.id %>
        </td>

        <td>
          <% if item.restaurant.present? %>
            <a href="/restaurants/<%= item.restaurant.id %>">
              <%= item.restaurant.cuisine %>
            </a>
          <% end %>
        </td>

        <td>
          <%= item.name %>
        </td>

        <td>
          <%= item.vegetarian %>
        </td>

        <td>
          <%= item.vegan %>
        </td>

        <td>
          <%= item.description %>
        </td>

        <td>
          <%= time_ago_in_words(item.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(item.updated_at) %> ago
        </td>

        <td>
          <a href="/items/<%= item.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @items, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>

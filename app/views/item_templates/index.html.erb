<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All items
    </h1>

    <a href="/items/new" class="btn btn-block btn-outline-secondary">
      Add a new item
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Restaurant
        </th>

        <th>
          Name
        </th>

        <th>
          Vegetarian
        </th>

        <th>
          Vegan
        </th>

        <th>
          Description
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @items.each do |item| %>
      <tr>
        <!-- Display item.id start -->
        <td>
          <%= item.id %>
        </td>
        <!-- Display item.id end -->

        <!-- Display item.restaurant_id start -->
        <td>
          <%= item.restaurant_id %>
        </td>
        <!-- Display item.restaurant_id end -->

        <!-- Display item.name start -->
        <td>
          <%= item.name %>
        </td>
        <!-- Display item.name end -->

        <!-- Display item.vegetarian start -->
        <td>
          <%= item.vegetarian %>
        </td>
        <!-- Display item.vegetarian end -->

        <!-- Display item.vegan start -->
        <td>
          <%= item.vegan %>
        </td>
        <!-- Display item.vegan end -->

        <!-- Display item.description start -->
        <td>
          <%= item.description %>
        </td>
        <!-- Display item.description end -->

        <!-- Display item.created_at start -->
        <td>
          <%= time_ago_in_words(item.created_at) %> ago
        </td>
        <!-- Display item.created_at end -->

        <!-- Display item.updated_at start -->
        <td>
          <%= time_ago_in_words(item.updated_at) %> ago
        </td>
        <!-- Display item.updated_at end -->

        <td>
          <a href="/items/<%= item.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
